# Gemfile

source 'https://rubygems.org'

# Sorbet gem
gem 'sorbet', require: false

# RuboCop for style checking
gem 'rubocop', require: false

# RuboCop extension for performance optimizations
gem 'rubocop-performance', require: false

# RuboCop extension for Sorbet type checking
gem 'rubocop-sorbet', require: false

# RuboCop extension for RSpec
gem 'rubocop-rspec', require: false

# gemfilelint for linting Gemfiles
gem 'gemfilelint', require: false